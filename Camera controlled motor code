int main(){
    init(0);
    init(1);
    connect_to_server("130.195.6.196", 1024);
    send_to_server("Please");
    char message[24];
    receive_from_server(message);
    printf("%s", message);

    char c;
    int setMotor;
while(true){
    take_picture();
    c = get_pixel(160, 120, 3);
    printf("%d\n", c);
if(c > 100){
    setMotor = 100;
    } 
else {
    setMotor = 0;
    }
    set_motor(1, setMotor);
    set_motor(2, setMotor);
}

